<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />

    <RelativeLayout
        android:layout_above="@+id/space"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="#77ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/albumImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:src="@drawable/no_cover"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:text="Title"
            android:id="@+id/title"
            android:layout_alignTop="@+id/albumImage"
            android:layout_toRightOf="@+id/albumImage"
            android:layout_toEndOf="@+id/albumImage"
            android:gravity="start|center_vertical"
            android:textColor="#424242"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:text="Album"
            android:id="@+id/album"
            android:layout_below="@+id/title"
            android:gravity="start|center_vertical"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:textColor="#424242" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:text="Artist"
            android:id="@+id/artist"
            android:gravity="start|center_vertical"
            android:layout_below="@+id/album"
            android:layout_alignLeft="@+id/album"
            android:layout_alignStart="@+id/album"
            android:textColor="#424242" />
    </RelativeLayout>

</RelativeLayout>